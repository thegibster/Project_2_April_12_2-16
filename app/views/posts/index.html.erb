<div class="page-header">
<h1>Home</h1>
</div>
<p>
  <%= link_to "New Text Post", new_text_post_path,
        class: "btn btn-default" %>
        <%= link_to "New Image Post", new_image_post_path,
        class: "btn btn-default" %>
</p>

<%= render @posts %>

<% form_for @comment do|f| %>
  <%= f.error_messages %>
  <%= f.hidden_field :post_id %>

  <p>
  <%= f.label :name %><br />
  <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit "Post Comment" %>
  </p>
<% end %>
