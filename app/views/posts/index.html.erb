
<div class="page-header">
<h1>Home</h1>
</div>

<p>
  <%= link_to "New Text Post", new_text_post_path,
        class: "btn btn-default" %>
        <%= link_to "New Image Post", new_image_post_path,
        class: "btn btn-default" %>

</p>


<% @posts.each do |post| %>
  <% if post.type == 'TextPost' %>
    <%= render "text_post", :post => post %>
  <% else %>
    <%= render "image_post", :post => post %>
  <%end%>
<%end%>
