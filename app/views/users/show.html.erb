<div class="page-header">
   <h1><p class="lead"><%= @user.name %></p></h1>
   <h6>Followed By: <%= current_user.leaders.size %>
   Following <%= current_user.followers.size %>
    </h6>
</div>

<%= link_to "Home", root_path,
       class: "btn btn-default" %>
  <%= link_to "Follow", follow_user_path(@user),
       class: "btn btn-default" %>



<h2>Posts</h2>

<!-- <p class="lead"><%= @user.name %></p> -->

<% if current_user %>
  <% if current_user != @user && !current_user.following?(@user) %>
    <%= link_to "Follow", follow_user_path(@user),
          class: "btn btn-default" %>
  <% end %>
<% end %>

<%  @posts.each do |post| %>
<% if post.type == 'TextPost' %>
    <%= render "posts/text_post", :post => post %>
  <% else %>
    <%= render "posts/image_post", :post => post %>
  <%end%>
<% end %>




